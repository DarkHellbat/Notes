@model batNotes.Models.NotesListViewModel
    @using batNotes.Models.Repositories
@{
    ViewBag.Title = "ShowNotes";
}

<h2>Список заметок</h2>
<table border="1">
    <tr>
       
        <td>Название</td>
       @*<td>Текст</td>*@
         <td>Дата создания</td>
        <td>Дата изменения</td>
    </tr>
    
    @foreach(var n in Model.Notes.Where(nt=>nt.Author==))
    {
        <tr>
            <td>@n.Name</td>
            @*<td>@n.Text</td>*@
            <td>@n.Created</td>
            <td>@n.Changed</td>
            <td>@Html.ActionLink("Просмотреть","ViewNote","Notes", new { id=n.NoteId},null)</td>
        </tr>
    }
</table>

